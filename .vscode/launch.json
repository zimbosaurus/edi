    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Lib",
            "program": "${workspaceFolder}/build/lib/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Lib With Yarn",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["lib:run"]
        }
    ]
}